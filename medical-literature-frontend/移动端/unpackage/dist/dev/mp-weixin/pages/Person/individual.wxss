.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
}
.container .userInfo {
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 720rpx;
}
.container .userInfo .img {
  width: 200rpx;
  height: 200rpx;
}
.container .userInfo .img image {
  width: 100%;
  height: 100%;
}
.container .userInfo .name {
  color: darkcyan;
}
.container .userInfo button {
  margin-bottom: 10rpx;
}
.container .paperList .paperItem {
  border: 1px solid #eee;
  margin: 5px;
  width: 750rpx;
  overflow: hidden;
}
.container .paperList .paperItem ._header {
  line-height: 40rpx;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 10rpx;
  color: #808080;
}
.container .paperList .paperItem ._header text {
  display: block;
}
.container .paperList .paperItem ._header .tit {
  font-size: 36rpx;
  line-height: 60rpx;
  color: #121212;
}
.container .paperList .paperItem ._main {
  line-height: 40rpx;
  font-size: 28rpx;
  word-wrap: break-word;
}
.container .paperList .paperItem ._footer {
  margin-top: 10rpx;
  height: 150rpx;
}
.container .paperList .paperItem ._footer text {
  display: block;
  font-size: 26rpx;
  line-height: 40rpx;
}
.container .paperList .paperItem ._footer .iconfont {
  float: left;
}
.container .paperList .paperItem ._footer .active {
  background-color: skyblue;
}
.container .paperList .paperItem ._footer button {
  width: 125rpx;
  height: 60rpx;
  margin: 8rpx;
  font-size: 24rpx;
  display: inline-block;
  float: right;
}
.container .isOver {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #eee;
  font-size: 32rpx;
}

